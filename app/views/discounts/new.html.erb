<h1>Create New Discount</h1>
<%= form_with url: "/merchants/#{@merchant.id}/discounts", method: :post, local: true do |f| %>
<%= f.label :percent, 'Percent Discount' %>
<%= f.number_field :percent %>
<%= f.label :threshold, 'Quantity Threshold' %>
<%= f.number_field :threshold %>
<%= f.submit 'Submit' %>
<% end %>
