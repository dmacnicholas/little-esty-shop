<h3>Edit Discount Details</h3>
<%= form_with url: "/merchants/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
<%= f.label :percent, 'Percent Discount' %>
<%= f.number_field :percent, value: @discount.percent %>
<%= f.label :threshold, 'Quantity Threshold' %>
<%= f.number_field :threshold, value: @discount.threshold %>
<%= f.submit "Update Discount" %>
<% end %>
